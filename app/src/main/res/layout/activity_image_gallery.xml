<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cv_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_ten"
            android:layout_weight="1"
            android:background="@color/white"
            android:elevation="@dimen/padding_five"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_twenty_five"
                android:paddingTop="@dimen/padding_twenty_five">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gallery"
                    android:layout_gravity="center" />

                <com.digitfellas.typchennai.common.customtextview.LatoBoldTextview
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/padding_five"
                    android:text="@string/gallery"
                    android:textColor="@color/app_title_color"
                    android:textSize="@dimen/sp_thirteen" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cv_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_ten"
            android:layout_weight="1"
            android:background="@color/white"
            android:elevation="@dimen/padding_five"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_twenty_five"
                android:paddingTop="@dimen/padding_twenty_five">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_video"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <com.digitfellas.typchennai.common.customtextview.LatoBoldTextview
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/padding_five"
                    android:text="@string/video_gallery"
                    android:textColor="@color/app_title_color"
                    android:textSize="@dimen/sp_thirteen" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>