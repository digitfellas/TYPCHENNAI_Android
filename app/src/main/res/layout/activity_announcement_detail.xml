<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_ten"
        android:elevation="@dimen/padding_five">

        <com.digitfellas.typchennai.common.customtextview.LatoBoldTextview
            android:id="@+id/tv_announcement_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_line_color"
            android:padding="@dimen/padding_ten"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/sp_thirteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_ten"
            android:layout_marginRight="@dimen/padding_ten"
            android:layout_marginTop="@dimen/padding_twenty"
            android:orientation="vertical"
            android:padding="@dimen/padding_twenty">

            <com.digitfellas.typchennai.common.customtextview.LatoRegularTextview
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_ten"
                android:layout_marginRight="@dimen/padding_ten"
                android:layout_marginTop="@dimen/padding_twenty"
                android:textColor="@color/light_black"
                android:textSize="@dimen/sp_twelve" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>