<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_ten"
        android:elevation="@dimen/padding_five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_five">

            <ImageView
                android:id="@+id/iv_vibhab"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_fifteen" />

            <com.digitfellas.typchennai.common.customtextview.LatoRegularTextview
                android:id="@+id/tv_vibhag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="@dimen/padding_ten"
                android:textColor="@color/light_black"
                android:textSize="@dimen/sp_thirteen"
                tools:text="Test vibahg" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>